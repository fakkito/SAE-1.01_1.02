<Window x:Class="SAE_1._01_1._02.WindowCredits"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAE_1._01_1._02"
        mc:Ignorable="d"
        Title="WindowCredits" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/img2/FondFromage.jpg.png">

            </ImageBrush>
        </Grid.Background>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="246">
            <Border x:Name="fondNoirCredit" Background="#AA333333" CornerRadius="15">




                <TextBlock x:Name="NomCredit"  Width="552"  Height="161" FontSize="50" FontWeight="ExtraBold"  Foreground="White" Text="Fait par Achille et Zayim" TextWrapping="Wrap"  TextAlignment="Center" />








            </Border>
            <Button x:Name="retourCredit" Content="Retour" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="53" Width="220" Background="Gold" BorderBrush="Brown" Grid.Row="1" FontSize="28" Margin="0,20,0,0" Click="retourCredit_Click" />
        </StackPanel>
    </Grid>
</Window>
